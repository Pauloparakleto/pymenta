                    </li>
                   <li class="nav-item page-scroll ml-2">          
                        <a class="nav-link js-scroll-trigger text-white" href="#pricing"><%=t '.prices' %></a>
                    </li>
                    <li class="nav-item page-scroll ml-2">
                        <a class="nav-link js-scroll-trigger text-white" href="#contact"><%=t '.contact' %></a>
                    </li>
                    <li class="nav-item page-scroll ml-2">
                        <%= link_to t("helpers.links.sign_in"), new_user_session_path, :class=>"nav-link js-scroll-trigger text-white" %>
                    </li>
                    <li class="nav-item page-scroll ml-2">
	                   <%= link_to t("helpers.links.sign_up"), new_user_registration_path , :class=>"nav-link js-scroll-trigger text-white" %>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    
    <header class="intro">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
	                    <% if flash[:notice] %>
