<h2><%= t("helpers.links.forgot_password") %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :email, :autofocus => true %>
  <%= f.button :submit, t("helpers.links.send_me_reset_instruction"), :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>