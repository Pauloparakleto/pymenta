<%- model_class = DocumentType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row-fluid">
    <dl class="dl-horizontal">
      <dt><strong><%=t '.description', :default =>  t("helpers.labels.description") %></strong></dt>
      <dd><%=  @document_type.description %></dd>  
    </dl>
    <dl class="dl-horizontal">
      <dt><strong><%=t '.name', :default =>  t("helpers.labels.code") %></strong></dt>
      <dd><%=  @document_type.id %></dd>  
    </dl>
</div>   

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              document_types_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_type_path(@document_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_type_path(@document_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
