<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:warehouse_id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:in_quantity) %></th>
      <th><%= model_class.human_attribute_name(:out_quantity) %></th>
      <th><%= model_class.human_attribute_name(:stock) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.warehouse.name %></td>
        <td><%= link_to stock.product.description, stock_path(stock) %></td>
        <td><%= stock.in_quantity %></td>
        <td><%= stock.out_quantity %></td>
        <td><%= stock.stock %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stock_path(stock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@movies, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>
