<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="form-actions">
	<div class="form-search">
      <div class="text-center">
        <%= form_tag({:controller => "stocks", :action => "search"}, :method => "post") do %>
          <% warehouses_array = Account.where("domain = ? AND type = ?",current_user.domain,"Warehouse").all.map { |warehouse| [warehouse.name, warehouse.id] } %>
          <%= select_tag :warehouse_id, options_for_select(warehouses_array, params[:warehouse_id]),  class: 'input-medium', :include_blank => true  %>
          <%= text_field_tag :description, params[:description], :placeholder => (t '.description', :default =>  t("helpers.labels.description"))  %>
          <%= submit_tag((t '.search', :default =>  t("helpers.labels.search")), :class => 'btn btn-danger') %>
        <% end %>
	  </div>
	</div>
</div>		
<table class="table table-striped">
  <thead>
      <th><%=t '.warehouse', :default =>  t("helpers.labels.warehouse") %></th>
      <th><%=t '.description', :default =>  t("helpers.labels.description") %></th>
      <th><%=t '.in_quantity', :default =>  t("helpers.labels.in_quantity") %></th>
      <th><%=t '.out_quanrity', :default =>  t("helpers.labels.out_quantity") %></th>
      <th><%=t '.stock', :default =>  t("helpers.labels.stock") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.warehouse.name %></td>
        <td><%= stock.product.description %></td>
        <td><%= stock.in_quantity %></td>
        <td><%= stock.out_quantity %></td>
        <td><%= stock.stock %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stock_path(stock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@movies, :params => { :warehouse_id => params[:warehouse_id], :description => params[:description]}, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>

