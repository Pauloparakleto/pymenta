<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
  <dd><%= @stock.version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:domain) %>:</strong></dt>
  <dd><%= @stock.domain %></dd>
  <dt><strong><%= model_class.human_attribute_name(:in_quantity) %>:</strong></dt>
  <dd><%= @stock.in_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:out_quantity) %>:</strong></dt>
  <dd><%= @stock.out_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @stock.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stock) %>:</strong></dt>
  <dd><%= @stock.stock %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @stock.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:warehouse_id) %>:</strong></dt>
  <dd><%= @stock.warehouse_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_path(@stock), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
