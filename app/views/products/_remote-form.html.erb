<%= simple_form_for @product, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
<div class="modal-body">
  <ul class="errors"></ul>
  <%= f.input :code %>
  <%= f.input :description %>
  <%= f.input :brand do %>
    <%= f.collection_select :brand_id, current_user.company.brands, :id, :description %>  
  <% end %>
  <%= f.input :category do %>
    <%= f.collection_select :category_id, current_user.company.categories, :id, :description %>  
  <% end %>
  <%= f.input :units, collection: Product::UNIT_TYPES, prompt: t('.select', :default => t("helpers.links.select")) %>
  <%= f.input :price %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger", "data-dismiss" => "modal", "aria-hidden" => "true" %>
</div>
  </div>
<% end %>
