<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="form-actions">
	<div class="form-search">
		<%= form_tag({:controller => "products", :action => "search"}, :method => "post") do %>
  		  <%= label_tag(:code, (t '.code', :default =>  t("helpers.labels.code")) ) %>
          <%= text_field_tag(:code, nil, :class => 'input-small') %>
          <%= label_tag(:description, (t '.description', :default =>  t("helpers.labels.description")) ) %>
          <%= text_field_tag(:description) %>
  		  <%= label_tag(:brand_id, (t '.brand', :default =>  t("helpers.labels.brand") ) ) %>
          <%= select_tag(:brand_id, options_for_select(current_user.company.brands.collect{|x| [x.description,x.id]})) %>
          <%= label_tag(:category_id, (t '.category', :default =>  t("helpers.labels.category") ) ) %>
           <%= select_tag(:category_id, options_for_select(current_user.company.categories.collect{|x| [x.description,x.id]})) %>
          <%= submit_tag((t '.search', :default =>  t("helpers.labels.search")), :class => 'btn btn-danger') %>
        <% end %>
	</div>
</div>		
<table class="table table-striped">
  <thead>
      <th><%=t '.code', :default =>  t("helpers.labels.code") %></th>
      <th><%=t '.description', :default =>  t("helpers.labels.description") %></th>
      <th><%=t '.brand', :default =>  t("helpers.labels.brand") %></th>
      <th><%=t '.category', :default =>  t("helpers.labels.category") %></th>
      <th><%=t '.units', :default =>  t("helpers.labels.units") %></th>
      <th><%=t '.price', :default =>  t("helpers.labels.price") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.code, product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.brand.description %></td>
        <td><%= product.category.description %></td>
        <td><%= product.units %></td>
        <td><%= product.price %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.pdf', :default => t("helpers.links.pdf")),
            product_list_report_products_path,
            :class => 'btn btn-primary' %>

<%= will_paginate(@movies, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>