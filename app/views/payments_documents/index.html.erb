<%- model_class = PaymentsDocument -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.js"></script>
<script type="text/javascript">
  $(document).ready(function()
  {
    $("#start_at").datepicker($.extend({dateFormat:'dd/mm/yy'},$.datepicker.regional['es']));
    $("#end_at").datepicker({dateFormat: 'dd/mm/yy'});
  });
</script>
<%= form_for PaymentsDocument.new, :url => {:action => "new"}, :method => "post"  do |f| %>
  <%= f.collection_select :type, current_user.company.document_types, :id, :description %>
  <%= f.button t('.new', :default => t("helpers.links.new")), :class => 'btn btn-primary' %>
<% end %>
<div class="form-actions">
	<div class="form-search">
        <div class="text-center">
		<%= form_tag({:controller => "payments_documents", :action => "search"}, :method => "post") do %>
              <%= label_tag(:name, (t '.name', :default =>  t("helpers.labels.name")) ) %>
              <%= text_field_tag(:name) %>
              <%= label_tag(:start_at, (t '.start_at', :default =>  t("helpers.labels.start_at")) ) %>
              <%= text_field_tag(:start_at, nil, :class => "input-small") %>  
              <%= label_tag(:end_at, (t '.end_at', :default =>  t("helpers.labels.end_at")) ) %>
              <%= text_field_tag(:end_at, nil, :class => "input-small") %>
 			  <%= label_tag(:status, (t '.status', :default =>  t("helpers.labels.status")) ) %>
              <%= select_tag 'status', options_for_select([['' , '' ],[t("helpers.labels.NOT_PAID"),'NOT_PAID'], [t("helpers.labels.PARTIAL_PAID"),'PARTIAL_PAID'], [t("helpers.labels.PAID"),'PAID']]) %>		  		
              <%= submit_tag((t '.search', :default =>  t("helpers.labels.search")), :class => 'btn btn-danger') %>
            <% end %>
	  </div>
	</div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.type', :default =>  t("helpers.labels.document_type") %></th>
      <th><%=t '.number', :default =>  t("helpers.labels.document_number") %></th>
      <th><%=t '.name', :default =>  t("helpers.labels.name") %></th>
      <th><%=t '.date', :default =>  t("helpers.labels.date") %></th>
      <th><%=t '.total', :default =>  t("helpers.labels.total") %></th>
      <th><%=t '.status', :default =>  t("helpers.labels.status") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @payments_documents.each do |payments_document| %>
      <tr>
        <td><%= payments_document.type %></td>
        <td><%= payments_document.number %></td>
        <td><%= payments_document.account.name %></td>
        <td><%= payments_document.date %></td>
        <td><%= payments_document.total %></td>
        <%= display_status payments_document.status %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      payments_document_path(payments_document), :class => 'btn btn-mini btn-warning' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_payments_document_path(payments_document), :class => 'btn btn-mini btn-primary' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      payments_document_path(payments_document),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate(@movies, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>