<%- model_class = PaymentsDocument -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:domain) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%= model_class.human_attribute_name(:paid_left) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:month) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @payments_documents.each do |payments_document| %>
      <tr>
        <td><%= link_to payments_document.id, payments_document_path(payments_document) %></td>
        <td><%= payments_document.version %></td>
        <td><%= payments_document.domain %></td>
        <td><%= payments_document.username %></td>
        <td><%= payments_document.type %></td>
        <td><%= payments_document.number %></td>
        <td><%= payments_document.date %></td>
        <td><%= payments_document.total %></td>
        <td><%= payments_document.paid %></td>
        <td><%= payments_document.paid_left %></td>
        <td><%= payments_document.year %></td>
        <td><%= payments_document.month %></td>
        <td><%=l payments_document.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_payments_document_path(payments_document), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      payments_document_path(payments_document),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_payments_document_path,
            :class => 'btn btn-primary' %>
