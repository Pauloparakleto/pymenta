<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.type', :default =>  t("helpers.labels.document_type") %></th>
      <th><%=t '.document_number', :default =>  t("helpers.labels.document_number") %></th>
      <th><%=t '.name', :default =>  t("helpers.labels.name") %></th>
      <th><%=t '.date', :default =>  t("helpers.labels.date") %></th>
      <th><%=t '.total', :default =>  t("helpers.labels.total") %></th>
      <th><%=t '.status', :default =>  t("helpers.labels.status") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @payments_document.documents.each do |document| %>
      <tr>
        <td><%= document.type %></td>
        <td><%= document.document_number %></td>
        <td><%= document.name %></td>
        <td><%= document.date %></td>
        <td><%= document.total %></td>
        <% if document.status == "NOT_PAID" %>
          <td><span class="label label-important"><%= document.status %></span></td>
        <% elsif document.status == "PARTIAL_PAID" %>
          <td><span class="label label-warning"><%= document.status %></span></td>
        <% else %>
          <td><span class="label label-success"><%= document.status %></span></td>
        <% end %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      document_path(document), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_document_path(document), :class => 'btn btn-mini btn-warning' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      document_path(document),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>