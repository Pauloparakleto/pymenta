<%- model_class = Provider -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="form-actions">
	<div class="form-search">
		<%= form_tag({:controller => "providers", :action => "search"}, :method => "post") do %>
  		  <%= label_tag(:code, (t '.code', :default =>  t("helpers.labels.code")) ) %>
              <%= text_field_tag(:code, nil, :class => 'input-small') %>
              <%= label_tag(:name, (t '.name', :default =>  t("helpers.labels.name")) ) %>
              <%= text_field_tag(:name) %>
              <%= label_tag(:city, (t '.city', :default =>  t("helpers.labels.city")) ) %>
              <%= text_field_tag(:city) %>  		

          <%= submit_tag((t '.search', :default =>  t("helpers.labels.search")), :class => 'btn btn-danger') %>
        <% end %>
	</div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.code', :default =>  t("helpers.labels.code") %></th>
      <th><%=t '.name', :default =>  t("helpers.labels.name") %></th>
	<th><%=t '.city', :default =>  t("helpers.labels.city") %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
   <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= link_to provider.code, provider_path(provider) %></td>
        <td><%= provider.name %></td>
        <td><%= provider.city %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_provider_path(provider), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      provider_path(provider),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_provider_path,
            :class => 'btn btn-primary' %>

<%= will_paginate(@movies, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>
